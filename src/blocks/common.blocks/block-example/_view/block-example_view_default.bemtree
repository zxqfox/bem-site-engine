block('block-example').mod('view', 'default')(
    elem('source')(
        content()(function () {
            var examplesData = this.data.node.source.examplesData,
                exampleData = examplesData[this._name];

            return [
                this._deps ? {
                    elem: 'source-item',
                    elemMods: { type: 'deps' },
                    content: {
                        elem: 'source-code',
                        elemMods: { view: 'text' },
                        content: this.xmlEscape(this._deps)
                    }
                } : '',
                exampleData ? {
                    elem: 'source-item',
                    elemMods: { type: 'custom-blocks' },
                    content: {
                        block: 'block-example-custom-blocks',
                        content: exampleData
                    }
                } : '',
                {
                    elem: 'source-item',
                    elemMods: { type: 'bemjson' },
                    content: [
                        {
                            elem: 'source-code',
                            elemMods: { view: 'iframe' },
                            attrs: { 'data-url': this._bemjson }
                        },
                        {
                            elem: 'source-copy',
                            js: { urlBemjson: this._bemjson }
                        }
                    ]
                }
            ];
        })
    )
);
