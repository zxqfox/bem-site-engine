block('sitemap')(
    tag()('ul'),

    elem('section').tag()('li'),

    elem('title')(
        def()(function () {
            return applyNext({ url: this.ctx.url });
        }),

        tag()(function () {
            return this.ctx.url ? 'a' : 'span';
        }),

        attrs()(function () {
            return { href: this.ctx.url };
        })
    )
);
